{
  "processors": ["stylelint-processor-styled-components"],
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-styled-components"
  ],
  "rules": {
    "property-no-unknown": [ true, {
      "ignoreProperties": [
        "text-align-vertical",
        "margin-vertical",
        "margin-horizontal",
        "padding-vertical",
        "padding-horizontal",
        "shadow-color",
        "shadow-offset",
        "shadow-radius",
        "resize-mode",
        "shadow-opacity"
      ]
    }]
  }
}
